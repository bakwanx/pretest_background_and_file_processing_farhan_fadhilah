<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PdfHandleActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:text="@string/btn_handle_pdf"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subtitle_pdf"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:layout_below="@+id/text_view"
            android:layout_marginStart="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/text_view_subtitle"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_btn_web_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_pdf_webview"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/iv_btn_assets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_pdf_assets"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/iv_btn_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_pdf_storage"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/iv_btn_internet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_pdf_internet"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>